[Unit]
Description=SmartCam Soccer Main Service
After=network.target
Wants=smartcam-manager.service smartcam-status.service

[Service]
Type=simple
User=michomanoly14892
WorkingDirectory=/home/michomanoly14892/code/SmartCam-Soccer/backend
Environment=PYTHONUNBUFFERED=1
EnvironmentFile=/home/michomanoly14892/code/SmartCam-Soccer/backend/.env
ExecStart=/home/michomanoly14892/code/SmartCam-Soccer/backend/venv/bin/python main.py
Restart=always
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=smartcam

[Install]
